                <input type="text" name="title" value="Harry Potter"></input>
                <input type="text" name="image" value=<%= book.image %>></input>
                <input type="text" name="title" value="Harry Potter"></input>
                <input type="text" name="title" value="Harry Potter"></input>
                <input type="text" name="title" value="Harry Potter"></input>
                <input type="text" name="bookshelf" placeholder="Enter a Bookshelf Name" id="shelf">
